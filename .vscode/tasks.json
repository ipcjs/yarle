{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "build:watch",
			"group": "build",
			"problemMatcher": {
				"base": "$tsc-watch",
				"background": {
					 "beginsPattern":{
						"regexp": "\\[nodemon\\] starting"
					 },
					 "endsPattern":{
						"regexp": "waiting for changes before restart"
					 }
				}
			},
			"isBackground": true,
			"label": "npm: build:watch",
		}
	]
}